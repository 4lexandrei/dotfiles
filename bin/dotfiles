#!/bin/bash
# dotfiles - Main entry script

check_path() {
  if [ ! -L "$0" ]; then
    # If path is no symlink
    DOTFILES_PATH="$(dirname "$0")/.."
  else
    if command -v readlink >/dev/null; then
      # If readlink is available, follow symlink
      DOTFILES_PATH="$(dirname "$(realpath "$0")")/.."
    fi
  fi
}

check_path

execute() {
  run_script() {
    mapfile -t scripts < <(find "$DOTFILES_PATH"/setup -type f -name "*.sh" -executable)

    clear

    # Ensure fzf is installed
    if ! command -v fzf >/dev/null; then
      echo "[ERROR]: fzf is required. Please install fzf to continue"
      exit 1
    fi

    local choice
    choice=$(printf '%s\n' "${scripts[@]}" | fzf --header="Run:" --border)

    echo -ne "┌───────────────────────┐\n│ 4lexandrei's Dotfiles │\n└───────────────────────┘\n"

    echo "$choice"

    if [ -n "$choice" ]; then
      echo "Press 'Enter' to continue or 'Ctrl + C' to cancel."
      read -r
      echo "Running $choice..." &
      sleep 1
      "$choice"
    else
      echo "No script selected." &
      sleep 1
    fi
  }
  run_script
}

execute
