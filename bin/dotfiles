#!/bin/bash
# dotfiles - Main entry script

RED=$(tput setaf 1)
NC=$(tput sgr0)

get_dotfiles_path() {
  if [ ! -L "$0" ]; then
    # If path is no symlink
    DOTFILES_PATH="$(realpath "$(dirname "$0")/..")"
  else
    # If symlink
    DOTFILES_PATH="$(dirname "$(realpath "$0")")/.."
  fi
}

get_dotfiles_path

check_dependencies() {
  # Ensure fzf is installed
  local dependencies=("fzf")

  for dep in "${dependencies[@]}"; do
    if ! command -v "$dep" >/dev/null; then
      printf "%sERROR%s '%s' is required. Please install '%s' to continue.\n" "${RED}" "${NC}" "$dep" "$dep" >&2
      exit 1
    fi
  done
}

execute() {
  clear

  local scripts
  scripts=$(find "$DOTFILES_PATH"/setup -type f -name "*.sh" -executable)

  local selected_script
  selected_script=$(
    printf "%s\n" "${scripts[@]}" |
      fzf --prompt="Run: " --border --with-nth -1 --delimiter /
  )

  # ┌───────────────────────┐
  # │ 4lexandrei's Dotfiles │
  # └───────────────────────┘
  printf "┌───────────────────────┐\n│ 4lexandrei's Dotfiles │\n└───────────────────────┘\n"

  if [ -n "$selected_script" ]; then
    printf ":: Running %s...\n" "$(basename "$selected_script")"
    "$selected_script"
  else
    printf "No script selected\n"
  fi
}

check_dependencies
execute
